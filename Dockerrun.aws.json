{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "ledons/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "ledons/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "ledons/multi-worker",
            "essential": false
        }, 
        {
            "name": "nginx",
            "image": "ledons/multi-nginx",
            "essential": true,
            "portMappins": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client", "server"] 
        }
    ]

}